{
    "name": "enobrev/php-api",
    "license": "MIT",
    "version": "0.9.0-dev",
    "description": "REST-Like API Library",
    "type": "library",
    "authors": [
        {
            "name": "Mark Armendariz",
            "email": "src@enobrev.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/enobrev/php-orm"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/enobrev/php-tools"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/melbings/php-dot-notation.git"
        }
    ],
    "require": {
        "php": ">=7.0.09",
        "enobrev/php-tools":  "dev-master",
        "enobrev/php-orm":  "dev-master",
        "zendframework/zend-diactoros": "^1.3",
        "twig/twig": "^2.4",
        "mtdowling/jmespath.php": "^2.4",
        "justinrainbow/json-schema": "dev-master",
        "adbario/php-dot-notation": "dev-recursive-merge",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "monolog/monolog": "^1.17",
        "nategood/commando": "^0.3.0",
        "phpunit/phpunit": "^7.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Enobrev\\API\\": "src/"
        },
        "files": [
            "src/Constants/HTTP.php",
            "src/Constants/Method.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Enobrev\\API\\Mock\\Table\\": "tests/Mock/Table",
            "Enobrev\\API\\Mock\\":        "tests/Mock/API",
            "Enobrev\\Test\\":             "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "bin": [
        "bin/generate_data_map.php"
    ]
}
